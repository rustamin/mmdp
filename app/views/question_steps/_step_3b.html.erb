<div class="panel panel-default">
  <div class="panel-heading">
    <h1 class="panel-title">Step 3 (づ｡◕‿‿◕｡)づ
    (Silahkan pilih kriteria terkait dari salah satu grup)
    </h1>
  </div>
  <div class="panel-body">
    <%= simple_form_for(@mataharinya, url: wizard_path, :method => :put) do |f| %>

    <%= f.input :populasi_objek, label: "Apakah metode peramalan yang akan anda gunakan mencakup seluruh populasi objek yang diteliti?
    " %>
    <hr class=colorgraph>
    <%= f.input :banyak_staff, label: "Apakah metode peramalan yang akan anda gunakan melibatkan banyak pihak (staff, enumerator, dan ahli)?
    " %>
    <%= f.input :kemampuan_analisis, label: "Apakah metode peramalan yang akan anda lakukan membutuhkan kemampuan analisis dari kelompok ahli?
    " %>
    <hr class=colorgraph>
    <%= f.input :wawancara_langsung, label: "Apakah metode peramalan yang akan anda gunakan membutuhkan wawancara langsung ke masyarakat?
    " %>
    <%= f.input :opini_masyarakat, label: "Apakah metode peramalan yang akan anda gunakan berorientasi pada opini masyarakat?
    " %>
    <hr class=colorgraph>
    <%= f.input :waktu_singkat, label: "Apakah metode peramalan yang anda akan gunakan membutuhkan waktu yang ccenderung lebih singkat?
    " %>
    <%= f.input :sebagian_objek, label: "Apakah metode peramalan yang akan anda gunakan mencakup sebagian  objek (sampel) yang diteliti?
    " %>
    <div class="form-actions">
      <%= f.button :submit, "Lanjut!" %>
    </div>
    <% end %>
  </div>
</div>
